<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/gris">


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tableRow"
                    tools:ignore="UnknownId">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:text="Nombre del producto: "
                        android:textColor="@color/black"
                        android:textStyle="bold|normal" />

                    <TextView
                        android:id="@+id/nameProducto"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="17sp"
                        android:text="nameProducto"
                        android:textColor="@color/black"
                        android:textStyle="bold|normal" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/txt2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Cantidad productos:"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="bold|normal" />

                    <TextView
                        android:id="@+id/canditadProductos"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="cantidadProducto"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="bold|normal" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/txt3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Precio por producto:"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="bold|normal" />

                    <TextView
                        android:id="@+id/precioTotalProducto"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="precioTotalProducto"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="bold|normal" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </TableLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>